// schema creation + validator
use('platzi_store')
db.createCollection('users', {
    validator:{
        $jsonSchema:{
            bsonType: 'object',
            required: ['email','password'],
            properties:{
                name:{
                    bsonType: 'string'
                },
                last_name:{
                    bsonType: 'string'
                },
                password: {
                    bsonType:'string',
                    pattern: "^[A-Za-z0-9]{8,}$"
                },
                email:{
                    bsonType: 'string'
                }
            }   
        }
    }
})